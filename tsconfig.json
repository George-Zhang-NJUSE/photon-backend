{
    "compilerOptions": {
        "outDir": "out",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "moduleResolution": "node",
        "rootDir": "src",
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "removeComments": true
    },
    "exclude": [
        "out",
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "jest"
    ]
}